@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<h1>Login Page</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2>Login</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="username">Email</label>
                            <input type="text" asp-for="LoginModel.Username" class="form-control" id="username" placeholder="Enter email" />
                            <span asp-validation-for="LoginModel.Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" asp-for="LoginModel.Password" class="form-control" id="password" placeholder="Password">
                            <span asp-validation-for="LoginModel.Password" class="text-danger"></span>
                        </div>
                        @* <div class="form-group form-check"> *@
                        @*     <input type="checkbox" class="form-check-input" id="rememberMe"> *@
                        @*     <label class="form-check-label" for="rememberMe">Remember Me</label> *@
                        @* </div> *@
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </form>
                    @* <div class="mt-3"> *@
                    @*     <a href="/ForgotPassword">Forgot Password?</a> *@
                    @* </div> *@
                    @if (Model.Message != null)
                    {
                        <div class="alert alert-info mt-3">
                            <p>@Model.Message</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
